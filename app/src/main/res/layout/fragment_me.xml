        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/exitLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
